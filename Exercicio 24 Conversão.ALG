Algoritmo "Conversão"

Var

reais, ale, dolar, libra:real


Inicio

escreva (" Quantos reais você possui? ")
leia(reais)
ale <- reais * 2
dolar <- reais * 1.8
libra <- reais * 3.57
escreval (" Você possui ",ale, " Marcos alemães,",dolar," dolares e ",libra," Libras esterlinas.")

Fimalgoritmo